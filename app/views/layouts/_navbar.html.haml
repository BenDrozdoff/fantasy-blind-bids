%nav{class: "navbar navbar-expand-lg navbar-light bg-light"}
  %a{class: "navbar-brand", href: '#'} Fantasy Blind Bids
  #foo
    - if current_user
      %div{class: "d-inline nav-item"}
        %div{class: "navbar-text mx-3"}
          = current_user.full_name
      %button{class: "navbar-toggler", type: "button", "data-toggle": "collapse", "data-target": "#navbarNav", "aria-controls": "navbarNav", "aria-expanded": "false", "aria-label": "Toggle navigation"}
        %span.navbar-toggler-icon
    - else
      %div{class: "d-inline nav-item"}
        %a{class: "d-inline nav-link", href: '/users/sign_in'} Log In
      %div{class: "d-inline nav-item"}
        %a{class: "d-inline nav-link", href: 'users/sign_up'} Sign Up

  
  %div#navbarNav{class: "collapse navbar-collapse"}
    %ul{class: "navbar-nav mr-auto"}
      - if current_user
        %li.nav-item
          = button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-default navbar-btn"